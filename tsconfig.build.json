{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "types",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/session-store.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}