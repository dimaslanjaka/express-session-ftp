{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "cross-env-shell DEBUG=ftp,express-session,session-store-ftp,superior-ftp ts-node src/session-store.test.ts",
  "watch": [
    "./src/**/*.ts",
    "./tsconfig.json"
  ],
  "ignore": [
    "./chimeraland/**/*.json",
    "*.test.js",
    "*.test.ts",
    ".gitignore",
    "__*__/*",
    "__*__/*.js",
    "**/node_modules/**",
    "**/dist/**",
    "**/public/**",
    "**/tmp/**",
    "**/temp/**",
    "**/vendor/**",
    "**/.vscode/**",
    "*.log"
  ],
  "delay": 3000,
  "ext": "ts,js,ejs",
  "verbose": true
}